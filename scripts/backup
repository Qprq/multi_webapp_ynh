#!/bin/bash

#=================================================
# GENERIC STARTING
#=================================================
# MANAGE FAILURE OF THE SCRIPT
#=================================================

# Exit on command errors and treat unset variables as an error
set -eu

#=================================================
# IMPORT GENERIC HELPERS
#=================================================

if [ ! -e _common.sh ]; then
	# Rapatrie le fichier de fonctions si il n'est pas dans le dossier courant
	sudo cp ../settings/scripts/_common.sh ./_common.sh
	sudo chmod a+rx _common.sh
fi
source _common.sh
source /usr/share/yunohost/helpers

#=================================================
# LOAD SETTINGS
#=================================================

app=$YNH_APP_INSTANCE_NAME

final_path=$(ynh_app_setting_get $app final_path)
domain=$(ynh_app_setting_get $app domain)
appname=$(ynh_app_setting_get $app appname)
sql=$(ynh_app_setting_get $app sql)

#=================================================
# STANDARD BACKUP STEPS
#=================================================
# BACKUP OF THE MAIN DIR OF THE APP
#=================================================

CHECK_SIZE "$final_path"
ynh_backup "$final_path" "${YNH_APP_BACKUP_DIR}$final_path"

#=================================================
# BACKUP OF THE NGINX CONFIGURATION
#=================================================

ynh_backup "/etc/nginx/conf.d/$domain.d/$appname.conf" "${YNH_APP_BACKUP_DIR}/etc/nginx/conf.d/$domain.d/$appname.conf"

#=================================================
# BACKUP OF THE PHP-FPM CONFIGURATION
#=================================================

ynh_backup "/etc/php5/fpm/pool.d/$appname.conf" "${YNH_APP_BACKUP_DIR}/etc/php5/fpm/pool.d/$appname.conf"
ynh_backup "/etc/php5/fpm/conf.d/20-$appname.ini" "${YNH_APP_BACKUP_DIR}/etc/php5/fpm/conf.d/20-$appname.ini"

#=================================================
# BACKUP OF THE SQL BDD
#=================================================

if [ $sql -eq 1 ];
then
	db_name=$(ynh_app_setting_get $app db_name)
	db_pwd=$(ynh_app_setting_get $app mysqlpwd)
	ynh_mysql_dump_db "$db_name" > db.sql
	CHECK_SIZE "db.sql"
# 	ynh_backup "db.sql" "${YNH_APP_BACKUP_DIR}/db.sql"
fi
